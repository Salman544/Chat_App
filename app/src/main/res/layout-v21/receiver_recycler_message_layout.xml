<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_recycler_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <!--
    <TextView
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="MAY,12 11:54 pm"
        android:textColor="#6c000000"
        tools:ignore="HardcodedText"/>
-->
    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/receiver_box_xml"
        android:foreground="?attr/selectableItemBackground"
        android:maxWidth="220dp"
        android:paddingEnd="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingStart="10dp"
        android:textColor="@color/md_white_1000"
        android:textSize="16sp"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_text"
        android:layout_toEndOf="@+id/message_text"
        android:layout_toRightOf="@+id/message_text"
        android:text="12:32"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <android.support.v7.widget.CardView
        android:id="@+id/message_card_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/message_text"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/md_light_blue_200"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/image_view_message"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:padding="4dp"
            android:src="@drawable/fb"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/image_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="5dp"
            android:textColor="@color/md_black_1000"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            tools:ignore="RtlHardcoded"/>

        <ProgressBar
            android:id="@+id/imageview_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>


    </android.support.v7.widget.CardView>


</RelativeLayout>